{
  "name": "electro-encryptor",
  "version": "0.1.0",
  "description": "Encrypting messaging tool on Electron + Flow",
  "scripts": {
    "flow": "flow",
    "flow:coverage": "flow-coverage-report --config .flowcoverage.json",
    "flow:build": "flow-remove-types ./src -d ./lib --all --pretty",
    "flow:check": "flow check ./src/",
    "flow:deps": "flow-typed install",
    "dev": "watch --wait=1 'flow-remove-types src/ -d lib/ --all --pretty' ./src/ & nodemon ./lib/",
    "start": "npm run flow:build && electron ./lib/app.js"
  },
  "devDependencies": {
    "flow-bin": "^0.63.1",
    "flow-coverage-report": "^0.4.0",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.4.0",
    "nodemon": "^1.11.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "aes-js": "^3.1.1",
    "cryptico": "^1.0.2",
    "electron": "3.0.0-beta.8"
  }
}
